{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-analysis.py",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/context-loader.py"
          }
        ]
      }
    ]
  },
  "skills": {
    "auto-discovery": true,
    "auto-apply": true,
    "matching-strategy": "semantic",
    "priority": "high"
  }
}